<div class="new_step">
	<span class="remove_step">-</span>
	<%= select_tag "keyword[]", "<option>Given</option><option>When</option><option>And</option><option>Then</option>".html_safe  %>
	<%= text_field_tag "name[]", nil, size: 45, placeholder: "step description"%>
	<span class="table_button"><%= image_tag "table.png", height: '17', title: "Add a table to this step"%></span>
	<span class="sort_handle"><%= image_tag "cursor_hand.png", height: '15', title: "Change the steps' order" %></span>
	<span class="add_step">+</span>
</div>