<p id="notice"><%= notice %></p>
<h2> <%= @feature.name %></h2>
<h3> <%= @feature.description %></h3>


<script type="text/javascript">
$(document).ready(function(){
	$(".scenario_body").hide();

	
	$(".scenario_head").toggle(function(){
		$(this).next(".scenario_body").slideDown(100);
	}, function(){
		$(this).next(".scenario_body").slideUp(300);
	});

});
</script>


	<% @feature.scenarios.each do |scenario| %>
		<h5 class="scenario_head" <%= (scenario.completed)? "style=background-color:#36D88E;": "style=background-color:#FF5D40;" %>>
			<%= scenario.name %>: <%= scenario.description %>
		</h5>
		<div class="scenario_body">
		<% scenario.steps.each do |step|%>
			
				
				<p class="<%= step.status%>"><label style="color:blue"><%= step.keyword %></label> <%= step.name%><p>
				<%if step.error_msg != "" %>
					<p style="background-color:red;"> <%= step.error_msg%><p>
				<%end %>
		
		<%end%>
		</div>
	<% end %>


	
	<% @feature.scenarios.each do |scenario| %>
		<h5 class="scenario_head" <%= (true)? "style=background-color:#AAAAAA;": "style=background-color:#FF5D40;" %> >
			
			
			<%= image_tag "under_construction-1.png" , :size => "16x16" %>
			
			<%= scenario.name %>: <%= scenario.description %>
		</h5>
		<div class="scenario_body">
		<% scenario.steps.each do |step|%>
			
				
				<p><label style="color:blue"><%= step.keyword %></label> <%= step.name%><p>

		
		<%end%>
		</div>
	<% end %>

	<%= render partial: "suggestion_scenarios/form"%>
